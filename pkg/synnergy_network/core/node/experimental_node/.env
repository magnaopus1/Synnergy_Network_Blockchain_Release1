# Node Configuration
NODE_ID=experimental-node-1
NODE_NAME="Experimental Node 1"
NODE_ENV=development
NETWORK_ID=testnet

# Consensus Algorithm
CONSENSUS_ALGORITHM=argon2

# Logging
LOG_LEVEL=DEBUG
LOG_PATH=/logs/experimental_node.log

# Storage
STORAGE_PATH=/data/blockchain

# Blockchain Parameters
BLOCKCHAIN_VERSION=1.0.0
MAX_BLOCK_SIZE=8MB
BLOCK_TIME_SECONDS=10

# Security
ENCRYPTION_ALGORITHM=argon2
ENCRYPTION_SALT="your-salt-value-here"
ENCRYPTION_KEY_LENGTH=32

# Testing Configuration
TEST_MODE=true
VIRTUAL_USERS=1000
TRANSACTION_RATE=100
SIMULATION_DURATION=3600

# Network Configuration
API_PORT=8080
P2P_PORT=9000
MAX_PEERS=50
PEER_DISCOVERY=true

# Operational Protocols
FEATURE_ROLLOUT_PHASES=3
DYNAMIC_TEST_CYCLES=true

# Compliance and Monitoring
AUTOMATED_REGULATORY_REPORTING=true
COMPLIANCE_MONITORING=true

# Risk Management
RISK_ASSESSMENT_FREQUENCY=weekly
PENETRATION_TESTING_FREQUENCY=monthly

# Collaborative Development
DEVELOPER_MODE=true
ALLOW_REMOTE_DEBUGGING=true
ENABLE_PROFILING=true

# Resource Management
CPU_LIMIT=2
MEMORY_LIMIT=4G

# Miscellaneous
TIMEZONE=UTC
