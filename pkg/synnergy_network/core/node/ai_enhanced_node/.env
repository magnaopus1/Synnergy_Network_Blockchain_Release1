# AI-Enhanced Node Environment Configuration

# General Node Settings
NODE_ID=ai_enhanced_node_1
NODE_NAME="AI Enhanced Node"
NETWORK=mainnet
LOG_LEVEL=info

# Networking Settings
NODE_PORT=8080
MAX_CONNECTIONS=100
HEARTBEAT_INTERVAL=60

# AI Settings
MODEL_PATH=/app/data/models
TRAINING_DATA_PATH=/app/data/training
PREDICTION_INTERVAL=30
MODEL_UPDATE_INTERVAL=86400

# AI Hardware Settings
GPU_ENABLED=true
TPU_ENABLED=false
MAX_GPU_MEMORY=16GB
MAX_TPU_MEMORY=16GB

# Data Storage Settings
DATA_DIR=/app/data
LOGS_DIR=/app/logs
BACKUP_DIR=/app/data/backup
MAX_STORAGE_SIZE=500GB

# Security Settings
ENCRYPTION_METHOD=argon2
USE_SALTS=true
ACCESS_CONTROL_ENABLED=true

# Access Control Settings
ADMIN_USERS=admin1,admin2
READ_ONLY_USERS=user1,user2

# API Settings
API_ENABLED=true
API_BIND_ADDRESS=0.0.0.0
API_PORT=8081
API_KEY=your_secure_api_key_here

# AI Ethics and Compliance Settings
ETHICAL_USE_FRAMEWORK=true
PRIVACY_PROTECTION=true
GDPR_COMPLIANCE=true

# Logging Settings
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=/app/logs/ai_node.log
MAX_LOG_SIZE=100MB
LOG_ROTATION_COUNT=5

# Update Settings
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=43200

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_URL=http://localhost:8081/health

# Model Training and Validation Settings
TRAINING_ENABLED=true
TRAINING_INTERVAL=86400
VALIDATION_ENABLED=true
VALIDATION_INTERVAL=86400

# Advanced Settings
EXPERIMENTAL_FEATURES=false
