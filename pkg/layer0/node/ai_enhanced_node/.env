# General Configuration
NODE_ENV=production
NODE_HOST=0.0.0.0
NODE_PORT=8000

# AI Model and Machine Learning Configuration
AI_MODEL_DIR=/opt/synthron/ai_models
AI_DEFAULT_MODEL=predictive_analytics_model.pt
AI_MODEL_UPDATE_INTERVAL=86400  # Update interval in seconds (24 hours)

# Network Configuration
MAX_INCOMING_PEERS=50
PEER_DISCOVERY_SERVICE_URL=https://discovery.synthron.net

# Security Settings
ENCRYPTION_KEY_PATH=/opt/synthron/security/node.key
ACCESS_CONTROL_ENABLED=true
TRUSTED_IPS=10.0.0.1,10.0.0.2

# Data Storage
DATA_STORAGE_PATH=/opt/synthron/data
DATA_MAX_STORAGE_LIMIT=500GB

# Smart Contract Execution
CONTRACT_EXECUTION_TIMEOUT_MS=500
SMART_CONTRACT_ADAPTIVE_EXECUTION=true

# Compliance and Ethics
COMPLIANCE_AUDIT_INTERVAL_DAYS=90
ETHICAL_AI_ENFORCEMENT_ENABLED=true

# Resource Allocation
CPU_ALLOCATION_PERCENTAGE=80
GPU_ALLOCATION_COUNT=2
MEMORY_ALLOCATION_GB=32

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_SAMPLING_RATE_MINUTES=1

# Proactive Management
TRAFFIC_FORECASTING_ENABLED=true
RESOURCE_ADJUSTMENT_STRATEGY=dynamic

# Logging
LOG_LEVEL=info
LOG_PATH=/var/log/synthron/node.log

# Database Configuration
DB_CONNECTION_STRING=mongodb://username:password@host:port/database
